{
  "name": "beefy-clm-api",
  "version": "1.0.0",
  "license": "gpl-3.0",
  "private": true,
  "engines": {
    "node": "^20.10.0"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "start": "node build/src/index.js",
    "dev": "ts-node-dev --respawn --require=dotenv/config src/index.ts",
    "format": "prettier --write src/**/*.{ts,graphql}",
    "prettier:check": "prettier --check src/**/*.{ts,graphql}",
    "prettier:fix": "prettier --write src/**/*.{ts,graphql}",
    "test": "npm run test:ts && npm run test:unit && npm run test:lint",
    "test:unit": "jest",
    "test:ts": "tsc --noEmit",
    "test:lint": "npm run prettier:check",
    "package:check": "ncu",
    "package:fix": "ncu -u && npm install",
    "postinstall": "npm --silent run codegen",
    "codegen": "npx graphclient build",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/etag": "^5.1.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@fastify/under-pressure": "^8.3.0",
    "@graphprotocol/client-cli": "^3.0.3",
    "@graphql-mesh/transform-prefix": "^0.98.0",
    "@graphql-mesh/transform-rename": "^0.98.7",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@types/lodash-es": "^4.17.12",
    "date-fns": "^3.6.0",
    "decimal.js": "^10.4.3",
    "fastify": "^4.26.2",
    "fluent-json-schema": "^4.2.1",
    "graphql": "^16.6.0",
    "lodash": "^4.17.21",
    "pino": "^8.19.0",
    "viem": "^2.9.3"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,graphql,json}": "prettier --write"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "dotenv": "^16.4.5",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "npm-check-updates": "^16.14.18",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.3"
  }
}
