    "lodash": "^4.17.21",
    "pino": "^8.19.0",
    "viem": "^2.9.3"
  },
  "scripts": {
    "prepare": "husky",
    "build": "tsc",
    "start": "node build/src/index.js",
    "dev:start": "ts-node-dev --respawn --require=dotenv/config src/index.ts",
    "prettier:check": "prettier --check src/**/*.{ts,graphql}",
